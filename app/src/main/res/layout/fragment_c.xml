<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgroud">



    <!-- Conteúdo sobreposto -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Botão voltar -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="32dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="62dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Voltar"
            android:src="@drawable/left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Conteúdo centralizado -->
        <LinearLayout
            android:id="@+id/centerContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <!-- Avatar -->
            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/generic_avatar"
                android:layout_marginBottom="32dp"
                android:contentDescription="Avatar" />

            <!-- Campo Usuário -->
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/person"
                    android:contentDescription="Ícone Usuário" />

                <EditText
                    android:id="@+id/editUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:background="@android:color/transparent"
                    android:hint="Usuário"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp"
                    android:fontFamily="@font/anekkannada"/>
            </RelativeLayout>

            <!-- Campo Senha -->
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/key"
                    android:contentDescription="Ícone Senha" />

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:background="@android:color/transparent"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp"
                    android:fontFamily="@font/anekkannada"/>
            </RelativeLayout>

            <!-- Texto "Esqueceu sua senha?" -->


            <!-- Botão Entrar -->

            <Button
                android:id="@+id/btnForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="60dp"
                android:padding="7dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/anekkannada"
                android:text="Esqueceu sua senha?"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogin"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:text="Entrar"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/inter"
                app:backgroundTint="#FFFFFFFF"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
